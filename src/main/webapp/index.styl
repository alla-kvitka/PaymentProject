@mixin transition($property) {transition: $property .25}

/*Typography*/
html {font: 16px 'Open Sans Condensed', 'Roboto Condensed', Verdana, sans-serif;}


/*Layout*/
html,
body {
  width: 100%;
  height: 100%;
}


a {
  text-decoration: none;
  text-decoration-color: 0000;
  transition: color .25s;
}

/*Navigation*/

nav h1 {
  float: center;
  padding: .25em .25em 0 0;
  font-size: 4.5em;
  text-transform: uppercase;
}

nav h1 a {color: $red;}
.nav-ul {
  display: flex;
}
header dir {width: 20%;}
header dir:not(:first-child) {margin-left: 2%;}
header .nav-ul a {
  padding: 1.75em .5em;
  font-size: 1.5em;
  text-transform: uppercase;
  color: $lightBlack;
  &:focus,
  &:hover {color: $red;}
  &:active {color: lighten($red, 5%);}
}
header dir:first-child a {
  background: $red;
  color: #fff;
  &:hover {color: #fff;}
}
/*Intro*/
.sec-intro img {
   align-content center
}

/*Footer*/
footer {
  padding: 2em 0;
  width: 100%;
  text-align: center;
  background: $lightGrey;
}
footer .nav-ul {justify-content: center;margin-bottom: 1em;}
footer dir:not(:first-child) {margin-left: .75em;}
footer dir:first-child a {color: $lightBlack;}
footer a {
  font-size: 1.25em;
  font-weight: bold;
  color: $darkGrey;
  &:focus,
  &:hover {color: $lightBlack;}
}
.copy {font-size: .85em;}